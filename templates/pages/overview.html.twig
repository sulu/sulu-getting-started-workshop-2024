{% extends 'base.html.twig' %}

{% block content %}
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-4xl text-center">
            <h1 class="text-balance text-5xl font-semibold tracking-tight text-gray-900 sm:text-7xl">{{ content.headline|default(content.title) }}</h1>
        </div>

        {% if (content.header_image) %}
            <div class="mt-8 flow-root sm:mt-12">
                {{ get_image(content.header_image, { src: '1200x', class: 'rounded-md shadow-2xl ring-1 ring-gray-900/10' }) }}
            </div>
        {% endif %}

        {% if (content.introduction) %}
            <div class="mx-auto max-w-4xl text-center">
                <p class="mt-8 text-pretty text-lg font-medium text-gray-500 sm:text-xl/8">{{ content.introduction|raw }}</p>
            </div>
        {% endif %}
    </div>

    <div class="mx-auto max-w-7xl px-3 py-12 sm:pt-16 lg:px-4 lg:py-20">
        {% for page in content.pages %}
            <article class="flex max-w-xl flex-col items-start justify-between pb-10 sm:pb-16">
                <div class="group relative max-w-xl">
                    <h3 class="mt-3 text-lg/6 font-semibold text-gray-900 group-hover:text-gray-600">
                        <a href="{{ sulu_content_path(page.url) }}">
                            <span class="absolute inset-0"></span>
                            {{ page.excerptTitle|default(page.title) }}
                        </a>
                    </h3>
                    <p class="mt-5 text-sm/6 text-gray-600 prose">{{ page.excerptDescription|default(page.introduction)|raw }}</p>
                </div>
                {% if (page.trainer) %}
                    <div class="relative mt-8 flex items-center gap-x-4">
                        {% if(page.trainer.avatar) %}
                            {% set image = sulu_resolve_media(page.trainer.avatar, app.request.locale) %}
                            {{ get_image(image, { src: '200x200', class: 'size-10 rounded-full bg-gray-50' }) }}
                        {% endif %}
                        <div class="text-sm/6">
                            <p class="font-semibold text-gray-900">
                                <a href="{{ page.trainer.mainUrl }}">
                                    <span class="absolute inset-0"></span>
                                    {{ page.trainer.fullName }}
                                </a>
                            </p>
                            <p class="text-gray-600">{{ page.trainer.position.position|default() }}</p>
                        </div>
                    </div>
                {% endif %}
            </article>
        {% endfor %}
    </div>
{% endblock %}
