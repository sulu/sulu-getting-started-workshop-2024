<section class="mx-auto max-w-7xl px-3 py-12 sm:pt-16 lg:px-4 lg:py-20">
    <div class="grid grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:grid-cols-2 lg:items-start">
        <div class="px-6 lg:px-0 lg:pr-4 lg:pt-4">
            <div class="lg:col-span-5">
                <h2 class="text-pretty text-3xl font-semibold tracking-tight text-gray-900 sm:text-4xl">{{ content.title }}</h2>
            </div>

            <div class="prose mt-4">{{ content.article|raw }}</div>
        </div>
        <div class="sm:px-6 lg:px-0">
            {% if content.image %}
                <figure class="relative isolate mt-4">
                    {{ get_image(content.image, { src: '600x', class: 'md:-ml-4 lg:-ml-0' }) }}
                </figure>
            {% endif %}
        </div>
    </div>
</section>
