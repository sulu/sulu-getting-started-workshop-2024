<section class="mx-auto max-w-7xl px-3 py-12 sm:pt-16 lg:px-4 lg:py-20">
    <div class="lg:grid lg:grid-cols-12 lg:gap-8">
        <div class="lg:col-span-5">
            <h2 class="text-pretty text-3xl font-semibold tracking-tight text-gray-900 sm:text-4xl">{{ content.title }}</h2>
            <div class="prose mt-4">{{ content.opening|raw }}</div>
        </div>
        <div class="mt-10 lg:col-span-7 lg:mt-0">
            <dl class="space-y-10">

                {% for faq in content.questions %}
                    <div>
                        <dt class="text-base/7 font-semibold text-gray-900">{{ faq.question }}</dt>
                        <dd class="mt-2 text-base/7 text-gray-600">{{ faq.answer }}</dd>
                    </div>
                {% endfor %}

            </dl>
        </div>
    </div>
</section>
